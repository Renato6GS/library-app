---
export interface Props {
  title: string;
  author: string;
  image: string;
  altImage: string;
  hrefBook: string;
}
const { title, author = 'Desconocido', image, altImage, hrefBook } = Astro.props;
---

<div class="container">
  <img src={image} alt={altImage}>
  <div class="information-container">
    <h4>{title}</h4>
    <p>{author}</p>
  </div>
  <a class="download" href={hrefBook} download>Descargar</a>
</div>

<style>
  .container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    justify-content: space-between;
  }

  img {
    width: 100%;
    object-fit: cover;
    height: 280px;
  }

  h4 {
    margin: 0 0 15px;
    font-family: 'Lato Bold', Arial, Helvetica, sans-serif;
    font-size: 1.25rem;
    color: var(--black)
  }

  p {
    margin: 0;
    color: var(--gray);
    font-size: 1.1rem;
    font-weight: bold;
    font-size: 1rem;
    font-family: 'Lato', Arial, Helvetica, sans-serif;
  }

  .download {
    width: 100%;
    background-color: var(--primary-color);
    color: var(--white);
    padding: 12px 10px;
    border-radius: 5px;
    border: none;
    text-align: center;
  }
</style>